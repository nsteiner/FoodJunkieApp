<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".SubTips">
    <TextView
        android:id="@+id/tSub"
        android:layout_width="269dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:elevation="4dp"
        android:shadowColor="@color/black"
        android:shadowDx="3.5"
        android:shadowDy="3.3"
        android:shadowRadius="3.6"
        android:text="@string/sub_tips"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ingredient1"
        android:layout_width="585dp"
        android:layout_height="160dp"
        android:layout_marginTop="4dp"
        android:gravity="top"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cooking_ingre" />
    <ScrollView
        android:layout_width="411dp"
        android:layout_height="566dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/subText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/large_text2"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/secondingredient"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                android:gravity="bottom"
                app:srcCompat="@drawable/second_ingre" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>