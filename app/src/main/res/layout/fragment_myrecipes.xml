<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyRecipesFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="310dp"
        android:layout_height="348dp"
        android:layout_marginEnd="156dp"
        android:src="@drawable/bowl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="302dp"
        android:layout_height="594dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="272dp"
        android:src="@drawable/bowl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/topHolder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_newRecipe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="25"
                android:text="@string/new_recipe" />

            <TextView
                android:id="@+id/tv_myRecipes"
                android:layout_width="0dp"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:gravity="center"
                android:text="MY COOKBOOK"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/LogOut"
                android:layout_width="0dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:layout_weight="25"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:text="Sign out" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonHolder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_myBreakfast"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Breakfast"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="90dp"/>

            <Button
                android:id="@+id/btn_myLunch"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:text="Lunch" />

            <Button
                android:id="@+id/btn_myDinner"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:text="Dinner" />

            <Button
                android:id="@+id/btn_myDessert"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:text="Dessert" />

            <Button

                android:id="@+id/btn_mySnacks"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:text="Snacks"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>